{
    "name": "Binary Igor blog",
    "version": "1.0.0",
    "description": "Some experimental blog",
    "scripts": {
        "test": "mocha 'test/**/*.test.js' --exit",
        "test:file": "mocha test/**/$file.test.js --exit",
        "generate:css": "npx tailwindcss -i ./assets/styles.css -o ./dist/styles.css",
        "generate:css:live": "npx tailwindcss -i ./assets/styles.css -o ./dist/assets/styles.css --watch",
        "generate:site": "node src/generator.js",
        "generate:site:dev": "ENV=dev node src/generator.js",
        "build:blog": "bash build_blog.bash",
        "run:blog": "cd nginx; bash build_and_run_locally.bash",
        "build:run:api": "cd api; bash build_and_run_locally.bash"
    },
    "author": "Igor RoztropiÅ„ski",
    "license": "ISC",
    "engines": {
        "node": ">=19.0.0"
    },
    "dependencies": {
        "express": "^4.18.2",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "marked": "^7.0.3",
        "tailwindcss": "^3.3.3",
        "chai": "^4.2.0",
        "mocha": "^7.1.0",
        "supertest": "^6.3.3"
    },
    "type": "module"
}
